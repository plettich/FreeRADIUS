server {
        authorize {
                #files
                privacyidea-perl
                if (ok || updated) {
                        update control {
                                Auth-Type := Perl
                        }
                }
        }
        listen {
                type = auth
                ipaddr = *
                port = 0
        }
        authenticate {
                Auth-Type Perl {
                        privacyidea-perl
                }
        }
}

